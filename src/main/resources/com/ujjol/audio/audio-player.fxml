<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="180.0" prefWidth="600.0" style="-fx-background-color: #2C3E50;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ujjol.audio.AudioController">
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefWidth="600.0" spacing="10.0">

            <Label fx:id="songLabel" alignment="CENTER" style="-fx-text-fill: #ECF0F1; -fx-font-size: 36px; -fx-font-weight: bold;" text="Audio Player" />

            <ProgressBar fx:id="songProgressBar" prefWidth="580.0" progress="0.0" style="-fx-accent: #3498DB;" />

            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="playButton" onAction="#playMedia" style="-fx-background-color: #27AE60; -fx-text-fill: white;" text="▶ Play" />
                <Button fx:id="pauseButton" onAction="#pauseMedia" style="-fx-background-color: #F39C12; -fx-text-fill: white;" text="⏸ Pause" />
                <Button fx:id="previousButton" onAction="#previousMedia" style="-fx-background-color: #2980B9; -fx-text-fill: white;" text="⏮ Prev" />
                <Button fx:id="nextButton" onAction="#nextMedia" style="-fx-background-color: #2980B9; -fx-text-fill: white;" text="Next ⏭" />
                <Button fx:id="resetButton" onAction="#resetMedia" style="-fx-background-color: #C0392B; -fx-text-fill: white;" text="⏹ Reset" />
            </HBox>

            <HBox alignment="CENTER" spacing="10.0">
                <ComboBox fx:id="speedBox" onAction="#changeSpeed" promptText="Speed" style="-fx-background-color: #ECF0F1;" />
                <Label style="-fx-text-fill: #ECF0F1;" text="Volume:" />
                <Slider fx:id="volumeSlider" prefWidth="150.0" style="-fx-control-inner-background: #95A5A6;" value="50.0" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
